<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Mensajes de Contacto | Panel Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin-body">

    <header class="admin-header">
        <a href="/admin/dashboard" class="logo">Panel Admin</a>
        <nav class="admin-nav">
            <a href="/admin/dashboard">Dashboard</a>
            <a href="/admin/payments">Ver Pagos</a>
            <a href="/admin/contacts" class="active">Ver Contactos</a>
            <a href="/admin/logout">Cerrar Sesión</a>
        </nav>
    </header>

    <main class="admin-main">
        <div class="admin-card">
            <h1>Mensajes de Contacto</h1>
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Mensaje</th>
                        <th>País</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts && contacts.length > 0) { %>
                        <% contacts.forEach(contact => { %>
                            <tr>
                                <td><%= contact.name %></td>
                                <td><%= contact.email %></td>
                                <td style="white-space: pre-wrap; word-wrap: break-word;"><%= contact.comment %></td>
                                <td><%= contact.country %></td>
                                <td><%= new Date(contact.created_at).toLocaleString() %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" style="text-align: center;">No hay mensajes de contacto.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

</body>
</html>